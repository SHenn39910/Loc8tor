extends layout
include _includes/sharedHTMLfunctions
block content
    .row.banner
      .col-12
      h1= peageHeader.title
    .row
      .col-12.col-lg-9
        .row
          .col-12.col-md-6
            p.rating
              +outputRating(location.rating)
            p 1 Main Street, Connecticut, RG6 1PS
            .card.card-primary
               .card-block
                 h2.card-title Opening Hours 
                 each time in location.openingTimes
                    p.card-text
                      | #{time.days} :
                      if time.closed 
                        | closed
                      else 
                        | #{time.opening} -  #{time.closing}
            .card.card-primary
              .card-blcok
                h2.card-title Facilities 
                  each facility in location.facilities
                    span.badge.badge-warning
                      i.fa.fa-check 
                      | &nbsp; #{facility}
                    |&nbsp;
            
                    h2.card-title Location Map
                    img.img-responsive.img-rounded(src='http://maps.googleapis.com/maps/api/staticmap?center=51.455041,-0.9690884&zoom=17&size=400x350&sensor=false&markers=51.455041,-0.9690884&scale=2&key=AIzaSyBkxcTIPpMxDwxXYjgHRC5ta8qlNK-8d1w') 
    .row
        .col-12
            .card.card-primary.review-card 
                .card-block
                    a.btn.btn-primary.float-right(href='/location/review/new') Add Review
                h2.card-title Customer reviews 
                 .row.review
                    .col-12.no-gutters.review-header
                        span.rating 
                            i.fas.fa-star
                            i.fas.fa-star
                            i.fas.fa-star
                            i.fas.fa-star
                            i.fas.fa-star
                        span.reviewAuthor Barack Obama
                        small.reviewTimestamp 12 April 2021
                    .col-12
                        p It was good. I enjoyed the coffee the most.
        .col-12-12.col-lg-3
            p.lead
              |Queencups is on Loc8tor because it has accessible wifi and space to sit down with your laptop and get some work done.
            p
              |If you've visited us and like it - or if you don't - please leave a review to help other people like you.